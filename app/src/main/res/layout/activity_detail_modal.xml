<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail_modal"
    android:background="@drawable/modalbckg"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:paddingBottom="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp"
    android:gravity="center"
    tools:context="com.chavel.chavel.Home.DetailModalActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/app_logo"
        android:id="@+id/imgLogo"
        android:layout_above="@+id/btnCenter"
        android:layout_marginBottom="5dp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:id="@+id/btnCenter"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/btnCenter"
        android:textSize="16dp"
        android:id="@+id/lblVersion"
        android:text="Chavel version 1.3.0"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:textSize="12dp"
        android:text="&#169;2016 All rights reserved"
        />
</RelativeLayout>
