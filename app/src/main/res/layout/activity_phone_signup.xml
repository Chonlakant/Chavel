<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="#0081b3"
    android:paddingBottom="0dp"
    tools:context="com.chavel.chavel.Register.PhoneSignup">
    <ImageButton
        android:id="@+id/btnBack"
        android:background="@null"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/back_ico"
        />
        <ImageView
            android:layout_width="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/phoneHeadIcon"
            android:src="@drawable/signup_phone"
            android:layout_above="@+id/lblHeadText"
            />
        <TextView
            android:id="@+id/lblHeadText"
            android:layout_above="@+id/lblIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:text="Add Phone Number"
            android:gravity="center_horizontal|center_vertical"
            />
        <TextView
            android:id="@+id/lblIntro"
            android:layout_above="@+id/lblSignupEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff"
            android:text="Don't want to use your phone number?."
            android:gravity="center_horizontal|center_vertical"
            />
        <TextView
            android:id="@+id/lblSignupEmail"
            android:layout_above="@+id/container_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-10dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="Sign up with your email instead."
            android:gravity="center_horizontal|center_vertical"
            />
        <Button
            android:id="@+id/container_center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            />
        <EditText
            android:id="@+id/txtPhone"
            android:layout_below="@+id/container_center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="20dp"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:background="@drawable/rounded_edittext"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:textColor="#fff"
            android:hint="866890123"
            android:inputType="number"
            android:maxLength="9"
            android:paddingLeft="80dp"
            />
        <Spinner
            android:id="@+id/spTel"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="-80dp"
            android:layout_below="@+id/container_center"
            android:layout_toLeftOf="@+id/txtPhone"
            android:popupBackground="#2aa0cb"
            android:background="@null"
            >

        </Spinner>
        <TextView
            android:id="@+id/lblTel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="-90dp"
            android:layout_below="@+id/container_center"
            android:layout_toLeftOf="@+id/txtPhone"
            android:textColor="#ffffff"
            android:text="+66"
            android:gravity="center_horizontal|center_vertical"
            />
        <ImageButton
            android:gravity="center"
            android:id="@+id/btnNext"
            android:layout_below="@+id/txtPhone"
            android:background="@null"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:src="@drawable/btn_next" />
        <TextView
            android:id="@+id/lblPrivacy"
            android:layout_below="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff"
            android:text="By signing up,you agree to our\nTerms &amp; Privacy Policy."
            android:gravity="center_horizontal|center_vertical"
            />
    <TextView
        android:id="@+id/lblSignupbottom"
        android:layout_alignParentBottom="true"
        android:background="#0fa9e0"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#ffffff"
        android:text="Don't have an account? Sign Up."
        android:gravity="center_horizontal|center_vertical"
        />
</RelativeLayout>
