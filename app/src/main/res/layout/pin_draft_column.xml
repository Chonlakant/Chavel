<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    >
    <TextView
        android:id="@+id/ColTitle"
        android:text="Column 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:gravity="left|top"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/ColDetail"
        android:text="Column 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="left|top"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/ColPic"
            android:layout_weight="0.5"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/map_mock"
            android:id="@+id/ColPic2"
            android:layout_weight="0.5"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ColBtnGroup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:weightSum="1"
        >
        <Button
            android:id="@+id/ColBtnContinue"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight=".33"
            android:background="@drawable/btn_border_radius"
            android:adjustViewBounds="true"
            android:text="Finish"
            android:textAllCaps="false"
            android:gravity="center"
            android:includeFontPadding="false"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/ColBtnPreview"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight=".33"
            android:background="@drawable/btn_border_radius_blue"
            android:adjustViewBounds="true"
            android:text="Edit"
            android:textColor="#fff"
            android:gravity="center"
            android:includeFontPadding="false"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/ColBtnDelete"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight=".33"
            android:background="@drawable/btn_border_radius"
            android:adjustViewBounds="true"
            android:text="Delete"
            android:gravity="center"
            android:includeFontPadding="false"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            />
    </LinearLayout>
</LinearLayout>