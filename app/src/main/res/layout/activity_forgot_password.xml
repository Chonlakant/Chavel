<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/activity_forgot_password"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="#0081b3"
    android:paddingBottom="0dp"
    tools:context="com.chavel.chavel.Register.ForgotPassword">
    <ImageButton
        android:id="@+id/btnForgotBack"
        android:background="@null"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/back_ico"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/phoneHeadIcon"
        android:src="@drawable/signup_email"
        android:layout_above="@+id/lblHeadText"
        />
    <TextView
        android:id="@+id/lblHeadText"
        android:layout_above="@+id/lblIntro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:text="Forgot your password ?"
        android:gravity="center_horizontal|center_vertical"
        />
    <TextView
        android:id="@+id/lblIntro"
        android:layout_above="@+id/container_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffff"
        android:text="Please enter your email for reset password."
        android:gravity="center_horizontal|center_vertical"
        />
    <Button
        android:id="@+id/container_center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />
    <EditText
        android:id="@+id/txtForgotEmail"
        android:layout_below="@+id/container_center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_edittext"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:paddingLeft="5dp"
        android:inputType="textEmailAddress"
        android:textColor="#fff"
        />
    <Button
        android:id="@+id/btnSubmitForgot"
        android:layout_below="@+id/txtForgotEmail"
        android:background="@null"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAllCaps="false"
        android:text="Submit"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
