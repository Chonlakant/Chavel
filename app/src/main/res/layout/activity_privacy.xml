<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_privacy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="#0081b3"
    android:paddingBottom="0dp"
    tools:context="com.chavel.chavel.PrivacyActivity">
    <ImageButton
        android:id="@+id/btnPrivacyBack"
        android:background="@null"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/back_ico"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/lblPrivacyHead"
        android:text="Term &amp; Privacy Policy"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:textSize="20dp"
        android:layout_below="@+id/btnPrivacyBack"
        />
    <TextView
        android:id="@+id/lblPrivacyDetail"
        android:layout_below="@+id/lblPrivacyHead"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textStyle="normal"
        android:textSize="14dp"
        android:text="Privacy Detail....."
        />
</RelativeLayout>
